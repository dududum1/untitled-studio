{
    "name": "Untitled Studio",
    "short_name": "Untitled",
    "description": "Professional photo editing PWA with film presets",
    "start_url": "/",
    "display": "standalone",
    "orientation": "any",
    "background_color": "#121212",
    "theme_color": "#121212",
    "categories": ["photo", "graphics", "productivity"],
    "icons": [
        {
            "src": "assets/icons/favicon.svg",
            "sizes": "any",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        },
        {
            "src": "assets/icons/icon-192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "assets/icons/icon-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "image/jpeg": [".jpg", ".jpeg"],
                "image/png": [".png"],
                "image/webp": [".webp"]
            }
        }
    ],
    "share_target": {
        "action": "/",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "files": [
                {
                    "name": "images",
                    "accept": ["image/jpeg", "image/png", "image/webp"]
                }
            ]
        }
    }
}
